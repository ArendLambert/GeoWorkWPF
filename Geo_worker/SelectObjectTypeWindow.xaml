<Window x:Class="Geo_worker.SelectObjectTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор типа объекта" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Выберите тип объекта:"/>
        <ComboBox Grid.Row="0" x:Name="cbObjectType" Margin="0,0,0,10">
            <ComboBoxItem Content="Square"/>
            <ComboBoxItem Content="Profile"/>
            <ComboBoxItem Content="Picket"/>
        </ComboBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отменить" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>