<Window x:Class="Geo_worker.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geo_worker"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid Margin="20">
        <TabControl>
            <!-- Вкладка входа -->
            <TabItem Header="Вход">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Логин -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <Label Content="Логин"/>
                        <TextBox Padding="5" 
                                Height="30"/>
                    </StackPanel>

                    <!-- Пароль -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <Label Content="Пароль"/>
                        <PasswordBox Padding="5" 
                                   Height="30"/>
                    </StackPanel>

                    <!-- Кнопка входа -->
                    <Button Grid.Row="2" 
                           Content="Войти" 
                           Height="40" 
                           Margin="0,0,0,20"
                           Background="#FF4CAF50"
                           Foreground="White"
                           BorderThickness="0"/>

                    <!-- Ссылка "Забыли пароль?" -->
                    <TextBlock Grid.Row="3" 
                              Text="Забыли пароль?" 
                              HorizontalAlignment="Center"
                              TextDecorations="Underline"
                              Cursor="Hand"
                              Foreground="#FF2196F3"/>
                </Grid>
            </TabItem>

            <!-- Вкладка регистрации -->
            <TabItem Header="Регистрация">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Логин -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <Label Content="Логин"/>
                        <TextBox Padding="5" 
                                Height="30"/>
                    </StackPanel>

                    <!-- Пароль -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <Label Content="Пароль"/>
                        <PasswordBox Padding="5" 
                                   Height="30"/>
                    </StackPanel>

                    <!-- Кнопка регистрации -->
                    <Button Grid.Row="2" 
                           Content="Зарегистрироваться" 
                           Height="40" 
                           Margin="0,0,0,20"
                           Background="#FF2196F3"
                           Foreground="White"
                           BorderThickness="0"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
